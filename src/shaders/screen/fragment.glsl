  uvRipple(color.rg, .5);
  coswarp(color, 3.);

  color = mix(color, 1.-color, box(vUv, vec2(.95), .5));

  color = mix(color, vec3(uv.y, uv.x, 1.), box(vUv, vec2(.5), .5));





 gl_FragColor =  vec4(color, 1.-circle);

